@model RS.COMMON.DTO.LoginViewModel
@{
    Layout = "";
}
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>EÇT - Yönetim Uygulaması v2</title>
    <link rel="stylesheet" href="~/dist/semantic.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/site.css" type="text/css"/>
    
</head>
<body style="background-color: #DADADA">
    <div class="ui middle aligned center aligned grid" style="height: 85%">
        <div class="column" style="max-width: 450px">

            <form class="ui large form" autocomplete="off">

                <div class="ui stacked segment">
                    <div class="content" style="margin-bottom:10px">
                        <h3 class="ui header"> Emek Çalışmaları Topluluğu </h3>
                    </div>
                    <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" id="username" placeholder="E-Posta adresi">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" id="password" placeholder="Şifre">
                    </div>
                </div>
                    <div class="ui fluid large submit button">Giriş</div>
                </div>
            </form>
        </div>
    </div>
    <script src="/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="/dist/semantic.js" type="text/javascript"></script>
    <script src="/app/login.js" type="text/javascript"></script>
</body>


</html>

