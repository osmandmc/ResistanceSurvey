        $(document).on("click", ".a", function(){
            var newsId = $(this).data("id");
            let a = $(this);
            let opened = $(this).data("open");
            let desc = $(".description[data-id='" +newsId + "']");
            console.log(desc.is(":visible"));
            console.log(opened);
            if(opened == "0")
