<script type="text/javascript">
    $(document).ready(function () {
        let token = window.localStorage.getItem('token');
        $.ajaxSetup({
            beforeSend: function (xhr) {
                xhr.setRequestHeader('Authorization', 'Bearer ' + token);
            }
        });
    });
</script>
